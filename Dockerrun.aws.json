{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "gzkatana/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128               
        },
        {
            "name": "server",
            "image": "gzkatana/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128             
        },
        {
            "name": "worker",
            "image": "gzkatana/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128             
        },
        {
            "name": "nginx",
            "image": "gzkatana/multi-nginx",
            "hostname": "mginx",
            "essential": true,
            "portMappings": [
                {
                    "hostport": 80,
                    "containerport": 80
                }
            ],
            "links": ["client","server"],
            "memory": 128             
        }
    ]
}